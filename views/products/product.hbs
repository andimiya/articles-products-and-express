</h1>New Product Template</h1>

<form action="/products" method="post">
  Product Name:<br>
  <input type="text" name="name">
  <br>
  Product Price:<br>
  <input type="text" name="price">
  <br>
  Inventory:<br>
  <input type="text" name="inventory">
  <br>
  <input type="submit">
</form>


<h1>List of Products</h1>

{{#each prods}}
  <div class = "products">
    <p>Product Name: {{name}}<br>
    Price: ${{price}}<br>
    Inventory: {{inventory}}
    </p>
{{/each}}