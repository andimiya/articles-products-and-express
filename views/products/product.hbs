</h1>New Product Template</h1>

<form action="/products" method="post">
  Product Name:<br>
  <input type="text" name="name">
  <br>
  Product Price:<br>
  <input type="text" name="price">
  <br>
  Inventory:<br>
  <input type="text" name="inventory">
  <br>
  <input type="submit">
</form>


<h1>List of Products</h1>

{{#each prods}}
  <div class = "products">
    <p>Product Name: {{name}}<br>
    Price: ${{price}}<br>
    Inventory: {{inventory}}
    </p>
  <div>

  <form action="products/{{id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
  </form>
  <form action="products/{{id}}/edit" method="edit">
    <input type="submit" value="Edit">
  </form>
{{/each}}