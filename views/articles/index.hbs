<h1>List of Articles</h1>

{{#each articles}}
  <div class = "articles">
    <p>Article Title: {{title}}<br>
    Body: {{body}}<br>
    Author: {{author}}
    </p>
  <div>

  <form action="/articles/new" method="GET">
    <input type="submit" value="Add New Article">
  </form>

  <form action="articles/{{title}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
  </form>
  <form action="articles/{{title}}/edit" method="edit">
    <input type="submit" value="Edit">
  </form>
{{/each}}